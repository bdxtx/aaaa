<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="296dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_round_conner"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机"
        android:textColor="#333333"
        android:textSize="18dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一旦设置好手机就不可以再修改"
        android:textColor="#555555"
        android:textSize="16dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>
    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入你的手机号码"
        android:background="@null"
        android:layout_marginTop="25dp"
        android:textColorHint="#CCCCCC"
        android:textSize="15dp"
        android:inputType="number"
        android:maxLength="11"
        android:textColor="#333333"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="7dp"
        android:background="#E5E5E5"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"/>
    <TextView
        android:id="@+id/tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="该昵称已经存在"
        android:textColor="#FC5656"
        android:textSize="12dp"
        android:visibility="invisible"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="117dp"
            android:layout_height="40dp"
            android:layout_marginLeft="24dp"
            android:text="取消"
            android:textColor="#FFA62F"
            android:textSize="18dp"
            android:gravity="center"
            android:background="@drawable/course_select_cancel"/>
        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="117dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:text="确定"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:gravity="center"
            android:background="@drawable/course_select_ok"/>
    </LinearLayout>
</LinearLayout>
