<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="296dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_round_conner"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="邀请码"
        android:textColor="#333333"
        android:textSize="18dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="绑定邀请码获更多好礼"
        android:textColor="#555555"
        android:textSize="16dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>
    <EditText
        android:id="@+id/et_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:background="@null"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:hint="请输入你的邀请码"
        android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
        android:maxLength="6"
        android:textColorHint="#CCCCCC"
        android:gravity="center_vertical"
        android:textColor="@color/color_333333"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E5E5E5"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="5dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="117dp"
            android:layout_height="40dp"
            android:layout_marginLeft="24dp"
            android:text="取消"
            android:textColor="#FFA62F"
            android:textSize="18dp"
            android:gravity="center"
            android:background="@drawable/course_select_cancel"/>
        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="117dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:text="确定"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:gravity="center"
            android:background="@drawable/course_select_ok"/>
    </LinearLayout>
</LinearLayout>
