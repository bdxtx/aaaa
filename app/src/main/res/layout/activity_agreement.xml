                android:layout_height="wrap_content"
                android:textColor="#555555"
                android:textSize="14dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="15dp"
                android:lineSpacingExtra="10dp"
                android:text="\n3.2.2
