<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="296dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_round_conner"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="激活会员"
        android:textColor="#333333"
        android:textSize="18dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="激活码："
        android:textColor="#555555"
        android:textSize="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="24dp"/>
    <EditText
        android:id="@+id/et_code"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="16dp"
        android:background="@drawable/shape_vip_code_input"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:maxLength="6"
        android:hint="请输入激活码"
        android:textColorHint="#CCCCCC"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"
        android:textColor="@color/color_333333"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="117dp"
            android:layout_height="40dp"
            android:layout_marginLeft="24dp"
            android:text="取消"
            android:textColor="#FFA62F"
            android:textSize="18dp"
            android:gravity="center"
            android:background="@drawable/course_select_cancel"/>
        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="117dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:text="确定"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:gravity="center"
            android:background="@drawable/course_select_ok"/>
    </LinearLayout>
</LinearLayout>
