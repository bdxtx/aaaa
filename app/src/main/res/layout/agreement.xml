<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="296dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_white_round_conner10">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="服务协议与隐私政策"
        android:textSize="18dp"
        android:textColor="#333333"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="#555555"
        android:textSize="16dp"
        android:text="感谢您对螺蛳书院的关注\n 为了给您提供更好的学习体验，在应用程序的使用过程中，我们可能会获取部分必要信息。 \n\n为了更好的保障您的个人权益，请您"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#555555"
            android:textSize="16dp"
            android:text="在使用我们的产品前务必阅读"/>
        <TextView
            android:id="@+id/fuwu1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6082E5"
            android:textSize="16dp"
            android:text="《服务"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/fuwu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6082E5"
            android:textSize="16dp"
            android:text="协议》"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#555555"
            android:textSize="16dp"
            android:text="与"/>
        <TextView
            android:id="@+id/yinsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6082E5"
            android:textSize="16dp"
            android:text="《隐私政策》"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="#555555"
        android:textSize="16dp"
        android:text="\n\n如果您是未满18周岁的未成年人，请通知您的监护人共同阅读，并寻求他们的同意和指导。点击“同意”，即表示您和您的监护人同意并接受全部条款。"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="117dp"
            android:layout_height="40dp"
            android:layout_marginLeft="24dp"
            android:text="退出"
            android:textColor="#FFA62F"
            android:textSize="18dp"
            android:gravity="center"
            android:background="@drawable/course_select_cancel"/>
        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="117dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:text="确定"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:gravity="center"
            android:background="@drawable/course_select_ok"/>
    </LinearLayout>
</LinearLayout>
