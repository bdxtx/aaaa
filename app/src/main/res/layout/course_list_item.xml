<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="357dp"
        android:layout_height="142dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp">
        <ImageView
            android:id="@+id/img_class"
            android:layout_width="140dp"
            android:layout_height="90dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="25dp"/>
        <TextView
            android:id="@+id/subject"
            android:layout_width="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="165dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="bold"
            android:text="《腹有诗书气自华》"
            android:textColor="#333333"
            android:textSize="15dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="165dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:maxLines="1"
                android:visibility="gone"
                android:ellipsize="end"
                android:textSize="12dp"
                />
            <TextView
                android:id="@+id/subjectName"
                android:layout_width="wrap_content"
                android:text="语文"
                android:textColor="#999999"
                android:textSize="12dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/after_subject"
                android:layout_width="1dp"
                android:layout_height="12dp"
                android:layout_marginLeft="6dp"
                android:background="#E5E5E5"
                android:layout_marginRight="6dp"/>
            <TextView
                android:id="@+id/schoolYear"
                android:layout_width="wrap_content"
                android:text="七年级"
                android:textColor="#999999"
                android:textSize="12dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/after_school"
                android:layout_width="1dp"
                android:layout_height="12dp"
                android:layout_marginLeft="6dp"
                android:background="#E5E5E5"
                android:layout_marginRight="6dp"/>
            <TextView
                android:id="@+id/booksNumber"
                android:layout_width="wrap_content"
                android:text="下册"
                android:textColor="#999999"
                android:textSize="12dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/after_book"
                android:layout_width="1dp"
                android:layout_height="12dp"
                android:layout_marginLeft="6dp"
                android:background="#E5E5E5"
                android:layout_marginRight="6dp"/>
            <TextView
                android:id="@+id/curriculum"
                android:layout_width="wrap_content"
                android:text="第8课"
                android:textColor="#999999"
                android:textSize="12dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="73dp"
            android:layout_marginLeft="166dp">
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥199"
                android:textSize="15dp"
                android:textColor="#FFA62F"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vip"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="免费"
                android:layout_gravity="center"
                android:textColor="#999999"
                android:layout_marginLeft="3dp"
                android:textSize="12dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/read_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10万人学过"
            android:textColor="#999999"
            android:layout_marginLeft="169dp"
            android:layout_marginTop="96dp"
            android:textSize="12dp"/>
        <LinearLayout
            android:id="@+id/ll_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="96dp"
            android:layout_marginLeft="294dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_like"
                android:layout_width="16dp"
                android:layout_height="14dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:textColor="#999999"
                android:textSize="12dp"
                android:text="收藏"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
