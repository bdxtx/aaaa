<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smart"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp">
                    <TextView
                        android:id="@+id/tv_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="邀请好友"
                        android:textColor="#555555"
                        android:textSize="14dp"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginRight="12dp"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img_header"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:background="@drawable/header_default"
                        android:layout_marginTop="14dp"
                        android:layout_marginLeft="16dp"/>
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="点击登录"
                        android:textSize="20dp"
                        android:textColor="#333333"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="80dp"
                        />

                    <ImageView
                        android:id="@+id/vip_tag"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="51dp" />
                    <TextView
                        android:id="@+id/tv_days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="剩余0天"
                        android:textColor="#999999"
                        android:layout_marginTop="48dp"
                        android:layout_marginLeft="98dp"
                        android:textSize="13dp"/>
                    <TextView
                        android:id="@+id/tv_invite_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="填写邀请码"
                        android:textColor="#6082E5"
                        android:visibility="gone"
                        android:layout_marginTop="48dp"
                        android:layout_marginLeft="175dp"
                        android:textSize="13dp"/>
                    <ImageView
                        android:id="@+id/img_center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/me_more"
                        android:padding="10dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="336dp"/>
                </FrameLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/ll_account"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:textColor="#333333"
                            android:text="0"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:textColor="#999999"
                            android:text="账户(元)"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_integral"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/integral"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:textColor="#333333"
                            android:text="0"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:textColor="#999999"
                            android:text="积分"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/coupon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:textColor="#333333"
                            android:text="0"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:textColor="#999999"
                            android:text="优惠券"/>
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:id="@+id/img_ad"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/part"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:background="#F7F7F7"
                    android:layout_marginTop="24dp"/>
                <FrameLayout
                    android:id="@+id/order"
                    android:layout_width="match_parent"
                    android:layout_height="56dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/m1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的订单"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="51dp"
                        android:textColor="#333333"
                        android:textSize="16dp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/me_item_more"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="346dp"/>
                </FrameLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E5E5E5"
                    android:layout_marginLeft="52dp"/>
                <FrameLayout
                    android:id="@+id/personal_center"
                    android:layout_width="match_parent"
                    android:layout_height="56dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/m2"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="会员中心"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="51dp"
                        android:textColor="#333333"
                        android:textSize="16dp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/me_item_more"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="346dp"/>
                </FrameLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E5E5E5"
                    android:visibility="gone"
                    android:layout_marginLeft="52dp"/>
                <FrameLayout
                    android:id="@+id/addr"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="56dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/m3"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="地址管理"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="51dp"
                        android:textColor="#333333"
                        android:textSize="16dp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/me_item_more"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="346dp"/>
                </FrameLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E5E5E5"
                    android:layout_marginLeft="52dp"/>
                <FrameLayout
                    android:id="@+id/shou_cang"
                    android:layout_width="match_parent"
                    android:layout_height="56dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/m4"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的收藏"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="51dp"
                        android:textColor="#333333"
                        android:textSize="16dp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/me_item_more"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="346dp"/>
                </FrameLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#F7F7F7"/>
                <FrameLayout
                    android:id="@+id/yi_jian"
                    android:layout_width="match_parent"
                    android:layout_height="56dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/m5"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="意见反馈"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="51dp"
                        android:textColor="#333333"
                        android:textSize="16dp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/me_item_more"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="346dp"/>
                </FrameLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E5E5E5"
                    android:layout_marginLeft="52dp"/>
                <FrameLayout
                    android:id="@+id/about"
                    android:layout_width="match_parent"
                    android:layout_height="56dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/m6"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="加入我们"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="51dp"
                        android:textColor="#333333"
                        android:textSize="16dp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/me_item_more"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="346dp"/>
                </FrameLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E5E5E5"
                    android:layout_marginLeft="52dp"/>
                <FrameLayout
                    android:id="@+id/version"
                    android:layout_width="match_parent"
                    android:layout_height="56dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/m7"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="版本信息"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="51dp"
                        android:textColor="#333333"
                        android:textSize="16dp"/>
                    <TextView
                        android:id="@+id/tv_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="v1.1.0(最新版本)"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="248dp"
                        android:textColor="#888888"
                        android:textSize="13dp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/me_item_more"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="346dp"/>
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/baseurl"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="56dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/m7"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="更换BaseUrl"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="51dp"
                        android:textColor="#333333"
                        android:textSize="16dp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/me_item_more"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="346dp"/>
                </FrameLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#F7F7F7"/>
            </LinearLayout>
        </ScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>
